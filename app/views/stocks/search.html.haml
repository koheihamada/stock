= render 'stocks/navbar'
.search-result
  .side-bar
    -@brand.each do |brand|
      %ul #{brand.brand}
      -brand.kinds.each do |name|
        -name.items.each do |item|
          = link_to stock_path(item.id) do
            %li #{name.name} サイズ(#{item.size.size})
      
  .search.clearfix
    =form_tag search_stocks_path, method: :get do
      %input.search{:name => "keyword", :placeholder => "欲しいものを検索してみよう（中央寄せ。。。）", :type => "text", :value => ""}/
      .submit
      = submit_tag "Search", class: "submit"



  %span.result 検索結果
  .hako.clearfix
    - @product.each do |product|
      - product.items.each do |item|
        .lineup.clearfix
          .name-color.clearfix
            %span.name.clearfix #{item.kind.name}
            %span.color Color: #{item.color.color}
          - if item.kind.images[0].present?
            = link_to image_tag(item.kind.images[0].image.to_s), stock_path(item.id)
          - else
            = link_to image_tag("#{asset_path "default.jpg"}"), stock_path(item.id)
          - if item.size.size.present?
            %p size #{item.size.size}
          - else
            %p 該当サイズなし
