    =s.hidden_field :item_id, value: @item.id
    =s.text_field :sell_price
    #myModal1.modal.fade.in
      .modal-dialog
        .modal-content
          .modal-header
            %a.btn.btn-default{"data-dismiss" => "modal"}
              %span.glyphicon.glyphicon-remove
            %h4 #{current_user.name}様
            %h4.modal-title 入札確認
          .modal-body
            %h4 本当にこの値段で売りの入札しますか？
            %p
          .modal-footer
            .btn-group
              %button.btn.btn-danger{"data-dismiss" => "modal"}
                %span.glyphicon.glyphicon-remove
                いいえ、しません
              %button.btn.btn-primary.sell
                %span.glyphicon.glyphicon-check
                =s.submit "はい、入札します", class: "sell", type:"button"

        / /.modal-content
