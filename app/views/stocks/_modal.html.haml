.order
  %span.bet.clearfix 買いの注文
  = form_for @buy_price, url: buy_path(@item.id) do |b|
    =b.hidden_field :user_id, value: current_user.id
    =b.hidden_field :item_id, value: @item.id
    =b.text_field :buy_price
    #myModal.modal.fade.in
      .modal-dialog
        .modal-content
          .modal-header
            %a.btn.btn-default{"data-dismiss" => "modal"}
              %span.glyphicon.glyphicon-remove
            %h4 #{current_user.name}様
            %h4.modal-title 入札確認
          .modal-body
            %h4.modal-h　
            %p 本当にこの値段で買いの入札しますか？
          .modal-footer
            .btn-group
              %button.btn.btn-danger{"data-dismiss" => "modal"}
                %span.glyphicon.glyphicon-remove
                いいえ、しません
              %button.btn.btn-primary.buy
                %span.glyphicon.glyphicon-check
                =b.submit "はい、入札します", class:"buy", type:"button"

        / /.modal-content
      / /.modal-dalog
    / /.modal
    %a.btn.btn-primary.buy.clearfix{"data-toggle" => "modal", :href => "#myModal"} buy
.order-sell
